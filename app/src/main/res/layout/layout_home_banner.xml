<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_home_banner_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/layout_home_title">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/shape_banner_bg"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.youth.banner.Banner
        android:id="@+id/banner_home"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="@dimen/margin_12dp"
        app:banner_indicator_height="4dp"
        app:banner_indicator_normal_color="@color/color_main_bg"
        app:banner_indicator_normal_width="12dp"
        app:banner_indicator_selected_color="@color/color_dark_bg"
        app:banner_indicator_selected_width="12dp"
        app:banner_radius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

