<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_16dp">

    <TextView
        android:id="@+id/tv_date_7d"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/textsize_14sp"
        tools:text="今天" />

    <ImageView
        android:id="@+id/iv_day_icon_7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_16dp"
        android:src="@mipmap/icon100" />

    <TextView
        android:id="@+id/tv_icon_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_6dp"
        android:text="/"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iv_night_icon_7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_6dp"
        android:src="@mipmap/icon150"
        app:layout_goneMarginStart="@dimen/margin_6dp" />

    <TextView
        android:id="@+id/tv_temp_range_7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_20dp"
        android:gravity="center"
        android:textColor="@color/colorMainText"
        android:textSize="@dimen/textsize_14sp"
        tools:text="14" />


</androidx.appcompat.widget.LinearLayoutCompat>